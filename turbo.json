{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**", "target/release/**", "target/debug/**"],
      "inputs": ["src/**", "Cargo.toml", "Cargo.lock", "**/*.rs", "tsconfig*.json", "package.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "target/test-results/**"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.rs",
        "tests/**/*.ts",
        "tests/**/*.rs",
        "**/*.test.ts",
        "**/*.spec.ts",
        "Cargo.toml"
      ]
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**", "apps/**/src/**", "packages/**/src/**", "*.js", "*.ts", "*.tsx"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["**/*.ts", "**/*.tsx", "tsconfig*.json"]
    },
    "format": {
      "cache": false,
      "outputs": [],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md,yml,yaml}", ".prettierignore", ".prettierrc*"]
    },
    "format:check": {
      "outputs": [],
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md,yml,yaml}", ".prettierignore", ".prettierrc*"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "rust:fmt": {
      "cache": false,
      "outputs": [],
      "inputs": ["**/*.rs", "Cargo.toml", "rust-toolchain.toml"]
    },
    "rust:fmt:fix": {
      "cache": false,
      "outputs": [],
      "inputs": ["**/*.rs", "Cargo.toml", "rust-toolchain.toml"]
    },
    "rust:clippy": {
      "dependsOn": ["rust:fmt"],
      "outputs": [],
      "inputs": ["**/*.rs", "Cargo.toml", "rust-toolchain.toml"]
    },
    "rust:test": {
      "dependsOn": ["rust:clippy"],
      "outputs": ["target/test-results/**"],
      "inputs": ["**/*.rs", "Cargo.toml", "Cargo.lock", "tests/**", "rust-toolchain.toml"]
    }
  }
}
