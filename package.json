{
  "name": "lean-wms",
  "version": "1.0.0",
  "description": "Lean Warehouse Management System",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=client-web",
    "dev:mobile": "turbo dev --filter=mobile",
    "dev:api": "turbo dev --filter=api",
    "build": "turbo build",
    "build:core": "turbo build --filter=@lean-wms/core",
    "build:web": "turbo build --filter=client-web",
    "build:mobile": "turbo build --filter=mobile",
    "build:api": "turbo build --filter=api",
    "test": "turbo test",
    "test:web": "turbo test --filter=client-web",
    "test:mobile": "turbo test --filter=mobile",
    "test:api": "turbo test --filter=api",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,yml,yaml}\" --ignore-path .prettierignore && turbo format",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yml,yaml}\" --ignore-path .prettierignore && turbo format:check",
    "rust:fmt": "turbo rust:fmt",
    "rust:fmt:fix": "turbo rust:fmt:fix",
    "rust:clippy": "turbo rust:clippy",
    "rust:test": "turbo rust:test",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules .turbo"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.4",
  "devDependencies": {
    "turbo": "^2.7.2"
  }
}
